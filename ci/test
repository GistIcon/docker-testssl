#!/bin/sh
set -e

. ci/helpers.sh

. ci/vars

echo '====> Test that images have correct versions.'
docker-compose run stable --version | grep "^[[:space:]]*testssl.sh.*${STABLE_BRANCH}"
docker-compose run dev    --version | grep "^[[:space:]]*testssl.sh.*${DEV_BRANCH}"

echo '====> Test SSL of a website.'
docker-compose run stable --heartbleed --ip one https://www.google.com/
docker-compose run dev    --heartbleed --ip one https://www.google.com/

echo '====> Check labels.'
if [ -n "${CIRCLECI}" ]; then
  docker inspect \
    -f '{{ index .Config.Labels "io.github.jumanjiman.ci-build-url" }}' \
    testssl:${STABLE_BRANCH} | grep circleci.com
  docker inspect \
    -f '{{ index .Config.Labels "io.github.jumanjiman.ci-build-url" }}' \
    testssl:${DEV_BRANCH} | grep circleci.com
fi
